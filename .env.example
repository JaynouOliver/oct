# Intelligent Document Parser - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# VLM (Vision Language Model) Configuration
# =============================================================================
# VLM model type (e.g., 'qwen', 'llava', 'gemini')
VLM_MODEL_TYPE=qwen

# VLM model name/endpoint
VLM_MODEL_NAME=qwen/qwen2.5-vl-32b-instruct:free

# API key for VLM service (OpenRouter, etc.)
VLM_API_KEY=your_vlm_api_key_here

# VLM API base URL
VLM_API_BASE=https://openrouter.ai/api/v1
# Gemini API key (for experimentation)
GEMINI_API_KEY=your_gemini_api_key_here

# VLM generation parameters
VLM_MAX_TOKENS=2048
VLM_TEMPERATURE=0.2

# VLM system prompt
VLM_SYSTEM_PROMPT=You are an expert document analyzer specializing in research papers.

# =============================================================================
# Document Processing Configuration
# =============================================================================
# Default PDF file path
PDF_FILE_PATH=financial_reasoning.pdf

# Output directory for analysis results
OUTPUT_DIRECTORY=intelligent_analysis_output

# Enable image extraction
EXTRACT_IMAGES=true

# Enable image description generation
GENERATE_DESCRIPTIONS=true

# =============================================================================
# RAG (Retrieval-Augmented Generation) Configuration
# =============================================================================
# Text chunk size for RAG
TEXT_CHUNK_SIZE=500

# Enable table extraction
ENABLE_TABLE_EXTRACTION=true

# Enable image analysis
ENABLE_IMAGE_ANALYSIS=true

# =============================================================================
# ChromaDB Cloud Configuration
# =============================================================================
# ChromaDB Cloud API key
CHROMA_API_KEY=your_chroma_api_key_here

# ChromaDB Cloud tenant
CHROMA_TENANT=your_chroma_tenant_here

# ChromaDB Cloud database name
CHROMA_DATABASE=ai_agent

# =============================================================================
# OpenAI Configuration
# =============================================================================
# OpenAI API key for embeddings and chat completions
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable verbose logging
ENABLE_VERBOSE_LOGGING=false

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Enable rate limiting
ENABLE_RATE_LIMITING=false

# Requests per minute
REQUESTS_PER_MINUTE=16

# Requests per day
REQUESTS_PER_DAY=50

# =============================================================================
# Development Configuration
# =============================================================================
# Development mode
DEBUG=false

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# Streamlit port
STREAMLIT_PORT=8501
